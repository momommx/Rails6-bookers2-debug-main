<table class="table table-hover table-inverse">
  
 <h4>Books search for "<%= params[:tag] %>"</h4>
 
    <tbody>
      <thead>
        <tr>
          <th colspan="3"></th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Tag</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
          <td><%= link_to tag.tagname(book.id) %></td>
        </tr>
      <% end %>
    </tbody>
</table>