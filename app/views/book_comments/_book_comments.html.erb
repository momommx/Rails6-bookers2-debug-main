<%# 更新したい箇所を部分テンプレート化する%>
<table>
 <tbody>
 <% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to(book.user) do %>
        <%= image_tag book_comment.user.get_profile_image(100,100) %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= book_comment.comment %>  
    </td>
    <td id="comment-delete">
      <% if book_comment.user == current_user %>
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), class:'btn btn-sm btn-danger', remote: true, method: :delete %>
      <% end %> 
    </td>
  </tr>
 <% end %>
 </tbody>
</table>